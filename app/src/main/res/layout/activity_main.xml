<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/EntType"
        android:layout_width="376dp"
        android:layout_height="55dp"
        android:accessibilityLiveRegion="polite"
        android:autoText="true"
        android:autofillHints=""
        android:ems="10"
        android:inputType="textShortMessage|textPersonName"
        android:text="@string/enter_message" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

            <EditText
                android:id="@+id/EnterColour"
                android:layout_width="379dp"
                android:layout_height="48dp"
                android:accessibilityLiveRegion="polite"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="textShortMessage"
                android:text="@string/colourName" />

            <EditText
                android:id="@+id/EntName"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:accessibilityLiveRegion="polite"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/clothingName"
                android:inputType="textShortMessage"
                android:minHeight="48dp"
                android:text="@string/clothingName"
                app:layout_constraintBottom_toTopOf="@+id/EntType"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/imgClothing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_launcher_background" />
        </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>